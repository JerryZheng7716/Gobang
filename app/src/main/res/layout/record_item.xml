                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/record_black_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="AI高级"
                    android:textColor="@color/dialog_text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持白: "
                    android:textColor="@color/dialog_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/record_white_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人类"
                    android:textColor="@color/dialog_text"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
