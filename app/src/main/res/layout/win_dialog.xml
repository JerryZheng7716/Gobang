<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="180dp"
    android:background="@drawable/ic_dialog"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_tittle_height"
        android:layout_gravity="center"
        android:src="@drawable/win_tittle" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/under_line_black" />

    <TextView
        android:id="@+id/win_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="恭喜XX获胜！"
        android:textColor="@color/dialog_text"
        android:textSize="@dimen/dialog_tittle_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/under_line_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_and_check"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_frame"
            android:text="@string/return_and_check"
            android:textSize="@dimen/dialog_button_text" />

        <Button
            android:id="@+id/restart"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_frame"
            android:text="@string/restart"
            android:textSize="@dimen/dialog_button_text" />
    </LinearLayout>
</LinearLayout>