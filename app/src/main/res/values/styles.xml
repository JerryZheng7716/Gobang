<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="OverflowStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu</item>
    </style>

    <!-- 控制 toolbar 绑定的 menu的风格-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/color_bg_normal</item>
        <item name="android:textColor">@color/dialog_text</item>
        <!--<item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item> &lt;!&ndash;新增一个item，用于控制menu&ndash;&gt;-->
        <item name="android:textSize">18sp</item>
        <!-- 更换右侧actionbar图标-->
        <item name="actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>
